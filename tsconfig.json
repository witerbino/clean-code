{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "src",
  ],
  "exclude": [".src/__test__/**/*.spec.ts"]
}
